@model DTOs.ClienteDTO

<div class="container">
    <div id="crear-row" class="row justify-content-center align-items-center">
        <div id="crear-column" class="col-md-10">


            <h4 class="card-title mb-4 mt-1 ">Editar Cliente</h4>
            @using (Html.BeginForm("Editar", "Cliente", FormMethod.Post))
            {
                @Html.HiddenFor(model => model.IdCliente)
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Nombre:</label>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    </div> <!-- form-group// -->
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Numero)
                        @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control"} })
                    </div> <!-- form-group// -->

                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Telefono)
                        @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                    </div> <!-- form-group// -->
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Email)
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    </div> <!-- form-group// -->

                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Direccion)
                        @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control" } })
                    </div> <!-- form-group// -->
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Cuit)
                        @Html.EditorFor(model => model.Cuit, new { htmlAttributes = new { @class = "form-control" } })
                        <span asp-validation-for="Cuit" class="text-danger"></span>
                    </div> <!-- form-group// -->

                </div>

                <div class="form-group ">
                    <button class="btn btn-primary">Guardar  </button>
                    <button class="btn btn-secondary ">Cancelar  </button>
                    <button type="button" class="btn btn-danger float-right " data-toggle="modal" data-target="#exampleModal">Eliminar</button>
                </div> <!-- form-group// -->

            }

        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <span class="model-text">¿Esta seguro que desea eliminar al cliente{nombre cliente}?</span>
            </div>
            <div class="modal-footer text-center">
                <button type="button" class="btn btn-primary">Si</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>

            </div>
        </div>
    </div>
</div>