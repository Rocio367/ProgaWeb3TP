
@model DTOs.ArticuloDTO

@{
}

<div class="container">
    <div id="crear-row" class="row justify-content-center align-items-center">
        <div id="crear-column" class="col-md-10">


            <h4 class="card-title mb-4 mt-1 ">Editar Articulo</h4>
            <form action="/Articulo/Editar" method="post">

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Codigo:</label>
                        <input type="text" asp-for="Codigo" class="form-control" placeholder="1688">
                        <span class="text-danger" asp-validation-for="Codigo"></span>

                    </div> <!-- form-group// -->
                    <div class="form-group col-md-6">
                        <label>Descripcion:</label>
                        <input type="text" asp-for="Descripcion" class="form-control" placeholder="">
                        <span class="text-danger" asp-validation-for="Descripcion"></span>

                    </div> <!-- form-group// -->
                    <input type="hidden" asp-for="Id" class="form-control">

                </div>


                <div class="form-group ">
                    <button type="submit" class="btn btn-primary" formaction="Editar">Guardar  </button>
                    @Html.ActionLink("Cancelar", "Lista", "Articulo", null, new { @class = "btn btn-secondary text-white" })
                    <button role="link" onclick="window.location = '/Articulo/Eliminar/@Model.Id'" type="button" class="btn btn-danger float-right " data-toggle="modal" data-target="#exampleModal">Eliminar</button>

                </div> <!-- form-group// -->
            </form>

        </div>
    </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <span class="model-text">¿Esta seguro que desea eliminar el artículo{nombre artículo}?</span>
            </div>
            <div class="modal-footer text-center">
                <button type="button" class="btn btn-primary">Si</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>

            </div>
        </div>
    </div>
</div>

