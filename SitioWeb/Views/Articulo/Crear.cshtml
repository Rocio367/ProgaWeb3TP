
@model DTOs.ArticuloDTO

@{
}

<div class="container">
    <div id="crear-row" class="row justify-content-center align-items-center">
        <div id="crear-column" class="col-md-10">

            <h4 class="card-title mb-4 mt-1 ">Nuevo Articulo</h4>
            <form action="/Articulo/Crear" method="post">

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Codigo:</label>
                        <input type="number" asp-for="Codigo" value="@Model.Codigo" class="form-control" placeholder="1688">
                        <span class="text-danger" asp-validation-for="Codigo"></span>

                    </div> <!-- form-group// -->
                    <div class="form-group col-md-6">
                        <label>Descripcion:</label>
                        <input type="text" asp-for="Descripcion" value="@Model.Descripcion" class="form-control" placeholder="">
                        <span class="text-danger" asp-validation-for="Descripcion"></span>

                    </div> <!-- form-group// -->

                </div>





                <div class="form-group ">

                    <button type="submit" value="Guardar" formaction="Crear" class="btn btn-primary" ">Guardar  </button>
                    <button type="submit" value="Guardar y crear otro" formaction="GuardarYCrearOtro" class="btn btn-primary" ">Guardar y crear otro </button>
                    @Html.ActionLink("Cancelar", "Lista", "Articulo", null, new { @class = "btn btn-secondary text-white" })

                </div><!-- form-group// -->

            </form>

        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />