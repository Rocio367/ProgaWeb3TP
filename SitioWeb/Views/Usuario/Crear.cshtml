@model DTOs.UsuarioDTO
<div class="container">
    <div id="crear-row" class="row justify-content-center align-items-center">
        <div id="crear-column" class="col-md-10">


            <h4 class="card-title mb-4 mt-1 ">Nuevo Usuario</h4>
            @using (Html.BeginForm("Crear", "Usuario", FormMethod.Post))
            {
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Email:</label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    </div> <!-- form-group// -->
                    <div class="form-group col-md-6">
                        <label>Password:</label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                    </div> <!-- form-group// -->

                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Nombre:</label>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    </div> <!-- form-group// -->
                    <div class="form-group col-md-6">
                        <label>Apellido:</label>
                        @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control" } })
                    </div> <!-- form-group// -->

                </div>

                <div class="form-row">

                    @{
                        var listado = new List<SelectListItem>() {
                        new SelectListItem()
                        {
                            Text = "Admin",
                            Value= "true",
                        },
                          new SelectListItem()
                        {
                            Text = "Estandar",
                            Value= "false",
                        }
                        };
                    }      
                         <div class="form-group col-md-6">
                         <label>Rol:</label>
                            @Html.DropDownListFor(model => model.EsAdmin, listado, new { @class = "custom-select" })
                          </div>
                        <div class="form-group col-md-6">
                            <label>Fecha Nacimiento:</label>
                            @Html.EditorFor(model => model.FechaNacimiento, new { @type = "date" })
                        </div>
                    </div>

                    <div class="form-group ">
                        <input type="submit" value="Guardar" class="btn btn-primary" />


                        <button class="btn btn-primary ">Guardar y Crear Otro  </button>

                        @Html.ActionLink("Cancelar", "Lista", "Usuario", null, new { @class = "btn btn-secondary text-white" })

                    </div> <!-- form-group// -->
                    }

                </div>
            </div>
</div>
