<div class="container">
  
    <div class="row justify-content-center align-items-center">
        <div class="col-md-12">
    
            <button role="link"  onclick="window.location='/Pedido/Crear'" class="btn btn-primary float-right mt-2 mb-2"> Nuevo Pedido  </button>

        </div>
    </div>
    <div class="row justify-content-center align-items-center">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Cliente</label>
                    <select class="custom-select" id="exampleFormControlSelect1">
                        @for (int i = 0; i < 6; i++)
                        {
                            <option>Cliente @i</option>
                        }
                    </select>
                 </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Estado</label>
                    <select class="custom-select" id="exampleFormControlSelect1">

                        <option>Finalizado</option>
                        <option>En proceso</option>
                        <option>Supendido</option>

                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Solo últimos 2 meses:</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Excluir Eliminados</label>
                </div>
            </div>

</div>
    <div class="row justify-content-center align-items-center">
        <div class="col-md-12">
            <table class="table  table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th class="text-center" scope="col">Pedido</th>
                        <th class="text-center" scope="col">Estado</th>
                        <th class="text-center" scope="col">Ult Modificacion</th>
                        <th class="text-center" scope="col">Ver</th>
                    </tr>
                </thead>
                <tbody>

                    @for (int i = 0; i < 6; i++)
                    {
                    <tr>
                        <th class="text-center" scope="row">pedido @i</th>
                        <td class="text-center">estado  @i</td>
                        <td class="text-center">fecha  @i</td>
                        <td class="text-center"><button role="link"  onclick="window.location='/Pedido/Editar'"  type="button" class="btn btn-info">Ver</button></td>
                    </tr>
                            }


                      

                    </tbody>
            </table>

           
        </div>
    </div>
    <div class="row justify-content-center align-items-center">
        <div class="col-md-12 text-center">
